<div class="container row">
	<div class="col-md-12 text-center" id="top-bar">
		<h1> Eat-Da-Burger! </h1>
	</div>
</div>
<div class="container row">
  <center>
    <!-- Left side Not yet devoured -->
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="ready_to_eat">
        {{#each burger}}
          {{#unless devoured}}
          <form>
            <div class="input-group">
              <li class="form-control">{{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}"type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">
        {{#each burger}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>

<form class="create-form">
    <h3 class="text-center col-md-12">Make A New Burger</h3>
	<div class="col-md-12 text-center enter_section form-group center-block">
			<input type="text" class="form-control" name="burger_name" value="" id="burg">
	</div>
    <div class="form-group text-center center-block">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Eaten?<br>
        <input type="radio" name="devoured" value="0"> Not Eaten
        <button type="submit" class="btn btn-primary center-block" id="text-enter-button">Submit</button>
		<p>
			Enter a burger you want to eat and click the Submit button.
		</p>
    </div>
</form>
